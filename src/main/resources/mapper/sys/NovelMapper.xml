        select
          id,
          title,
          introduction,
          auditor,
          source,
          is_delete isDelete,
          type
        from t_novel
        <where>
          <if test="title!=null and title!=''">
            title like CONCAT('%',#{title},'%')
          </if>
          <if test="auditor!=null and auditor!=''">
            auditor like CONCAT('%',#{auditor},'%')
          </if>
          <if test="catIds!=null and catIds!=''">
            find_in_set(type,#{catIds})
